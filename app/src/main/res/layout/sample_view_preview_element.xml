<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:clickable="true">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameOfEvent"
            android:layout_row="2"
            android:layout_column="2"
            android:text="AppClub | StudyApp"
            android:editable="false"
            android:layout_columnSpan="3"
            android:textSize="20dp"
            android:textColor="#ff000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@mipmap/icon_app_club"
            android:layout_rowSpan="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy Hour bis 24 Uhr"
            android:id="@+id/shortDescription"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnSpan="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13.3.15 23:00 -05:00"
            android:id="@+id/uhrzeit"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.appclub.de"
            android:id="@+id/webseite"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnSpan="3" />


        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/rating"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_columnSpan="4"
            android:max="100"
            android:progress="77"
            android:layout_gravity="fill_horizontal|center"
            android:layout_rowSpan="2"
            android:progressTint="#ff05ff00"
            android:progressBackgroundTint="#ffff0300"
            android:visibility="visible" />

        <ToggleButton
            android:button="@android:drawable/btn_star"
            android:background="@android:color/transparent"
            android:textOn=""
            android:textOff=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favorite"
            android:layout_row="7"
            android:layout_column="5" />



    </GridLayout>

</FrameLayout>