<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <gradient android:startColor="#ff8e2793" android:endColor="#ffa3a3a3" android:angle="270"/>
            <stroke android:width="2px" android:color="#ff010101" />
            <size android:height="15dp" android:width="15dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="#ff8e2793" android:endColor="#ffa3a3a3" android:angle="270"/>
            <stroke android:width="2px" android:color="#ff000000" />
            <size android:height="15dp" android:width="15dp"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:startColor="#ffededed" android:endColor="#ffb4b4b4" android:angle="270"/>
            <stroke android:width="2px" android:color="#ff000000" />
            <size android:height="15dp" android:width="15dp"/>
        </shape>
    </item>

</selector>